{
  "version": "1.0",
  "metadata": {
    "name": "Scheduler Example",
    "description": "Example configuration showing state-aware scheduling",
    "author": "Qontinui",
    "created": "2025-01-13"
  },
  "schedules": [
    {
      "id": "schedule-daily-check",
      "name": "Daily Health Check",
      "description": "Runs a health check process daily at 9 AM",
      "processId": "health-check-process",
      "triggerType": "TIME",
      "scheduleType": "FIXED_RATE",
      "cronExpression": "0 9 * * *",
      "checkMode": "CHECK_INACTIVE_ONLY",
      "maxIterations": 1,
      "stateCheckDelaySeconds": 2.0,
      "stateRebuildDelaySeconds": 1.0,
      "failureThreshold": 3,
      "enabled": true,
      "projectName": "scheduler-example",
      "createdAt": "2025-01-13T00:00:00Z"
    },
    {
      "id": "schedule-monitor-errors",
      "name": "Error Monitoring",
      "description": "Checks for errors every 5 minutes",
      "processId": "check-errors-process",
      "triggerType": "INTERVAL",
      "scheduleType": "FIXED_DELAY",
      "intervalSeconds": 300,
      "checkMode": "CHECK_ALL",
      "maxIterations": null,
      "stateCheckDelaySeconds": 2.0,
      "stateRebuildDelaySeconds": 1.0,
      "failureThreshold": 3,
      "enabled": true,
      "projectName": "scheduler-example",
      "createdAt": "2025-01-13T00:00:00Z"
    },
    {
      "id": "schedule-backup",
      "name": "Periodic Backup",
      "description": "Backs up data every hour with limited iterations",
      "processId": "backup-process",
      "triggerType": "INTERVAL",
      "scheduleType": "FIXED_RATE",
      "intervalSeconds": 3600,
      "checkMode": "CHECK_INACTIVE_ONLY",
      "maxIterations": 24,
      "stateCheckDelaySeconds": 2.0,
      "stateRebuildDelaySeconds": 1.0,
      "failureThreshold": 5,
      "enabled": false,
      "projectName": "scheduler-example",
      "createdAt": "2025-01-13T00:00:00Z"
    },
    {
      "id": "schedule-state-trigger",
      "name": "Error State Handler",
      "description": "Automatically handles error dialog when it appears",
      "processId": "handle-error-process",
      "triggerType": "STATE",
      "triggerState": "error-dialog",
      "scheduleType": "FIXED_RATE",
      "checkMode": "CHECK_ALL",
      "maxIterations": 3,
      "stateCheckDelaySeconds": 1.0,
      "stateRebuildDelaySeconds": 0.5,
      "failureThreshold": 3,
      "enabled": true,
      "projectName": "scheduler-example",
      "createdAt": "2025-01-13T00:00:00Z"
    },
    {
      "id": "schedule-manual",
      "name": "Manual Backup",
      "description": "Manual schedule for one-time backup execution",
      "processId": "backup-process",
      "triggerType": "MANUAL",
      "scheduleType": "FIXED_RATE",
      "checkMode": "CHECK_ALL",
      "maxIterations": 1,
      "stateCheckDelaySeconds": 2.0,
      "stateRebuildDelaySeconds": 1.0,
      "failureThreshold": 1,
      "enabled": false,
      "projectName": "scheduler-example",
      "createdAt": "2025-01-13T00:00:00Z"
    }
  ],
